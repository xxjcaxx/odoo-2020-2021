<odoo>
  <data>
        <record model="ir.cron" forcecreate="True" id="terraform.cron_update">
            <field name="name">Terraform: Cron Update</field>
            <field name="model_id" ref="model_terraform_planet"/>
            <field name="state">code</field>
            <field name="code">model.update_resources()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
             <field name="activity_user_type">specific</field>
            <field name="doall" eval="False" />
        </record>

        <record model="ir.cron" forcecreate="True" id="terraform.cron_challneges">
            <field name="name">Terraform: Cron Challenges</field>
            <field name="model_id" ref="model_terraform_challenge"/>
            <field name="state">code</field>
            <field name="code">model.calculate_challenges()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
             <field name="activity_user_type">specific</field>
            <field name="doall" eval="False" />
        </record>

          <record model="ir.cron" forcecreate="True" id="terraform.cron_travels">
            <field name="name">Terraform: Cron Travels</field>
            <field name="model_id" ref="model_terraform_travel"/>
            <field name="state">code</field>
            <field name="code">model.update_travels()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
             <field name="activity_user_type">specific</field>
            <field name="doall" eval="False" />
        </record>

  </data>
</odoo>